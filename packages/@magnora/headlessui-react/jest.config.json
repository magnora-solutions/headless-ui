{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "transform": {
    "^.+\\.(ts|tsx)$": "babel-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.(ts|tsx|js)",
    "<rootDir>/src/**/?(*.)(spec|test).(ts|tsx|js)"
  ],
  "collectCoverageFrom": [
    "src/**/*.(ts|tsx)",
    "!src/**/*.d.ts"
  ]
}
